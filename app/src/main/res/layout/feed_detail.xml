<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp" >
        <ImageView
            android:id="@+id/feed_profile_image"
            android:src="@drawable/main_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/feed_userName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"
            />
        <ImageButton
            android:id="@+id/feed_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="200dp"
            android:background="@color/white"
            android:src="@drawable/main_morebtn"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/feed_imageview_content"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="230dp" />
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <ImageView
            android:src="@drawable/main_heart"
            android:id="@+id/feed_favorite_imageview"
            android:layout_marginLeft="5dp"
            android:layout_width="18.44dp"
            android:layout_height="16.14dp" />
        <ImageView
            android:src="@drawable/main_comment"
            android:id="@+id/feed_comment_imageview"
            android:layout_marginLeft="22dp"
            android:layout_width="18.44dp"
            android:layout_height="16.14dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/feed_favoritecounter_textview"
        android:text="좋아요 0개"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/feed_title_textview"
        android:text="Title content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feed_explian_textview"
        android:text="Explain content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>